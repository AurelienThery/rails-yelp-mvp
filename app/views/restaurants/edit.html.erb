<div class= "container">
  <h1>Update A Restaurant</h1>
  <%= simple_form_for @restaurant do|f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.select :category, Restaurant::CATEGORY%>
    <%= f.submit %>
  <% end %>
  <%= link_to "Return to the list", restaurants_path %>
</div>
